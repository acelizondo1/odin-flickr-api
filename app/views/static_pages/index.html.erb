<section class="hero is-light is-fullheight">
    <div class="hero-body">
        <div class="container has-text-centered">
            <%= form_with url: root_path, method: :get do |f| %>
                <div class="actions columns">
                    <div class="field column is-4 is-offset-4">
                        <h4 class="is-size-4">Enter Your Flickr ID To Display Your Photos</h4>
                        <br />
                        <%= f.text_field :flickr_id, class: 'input mb-5' %>
                        <%= f.submit 'Search For Photos', class: 'button is-medium' %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>